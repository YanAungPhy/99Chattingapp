<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nineninechatapp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>

        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">

        <item name="android:textSize">13sp</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#000000</item>
    </style>


    <style name="View_Line">
        <item name="background">@color/actionbar_selector_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
        <item name="textAllCaps">false</item>
        <item name="iconSize">15dp</item>
    </style>

    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>

    <style name="TrillDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>